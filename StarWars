import pygame

class Hra:
    Screen = None
    aliens = []
    Score = 0
    Å½ivoty = 3

    def __init__(self, width, height):
        pygame.init()
        self.height = height
        self.width = width
        self.screen = pygame.display.set_mode((width, height))
        self.clock = pygame.time.Clock()
        done = False

    while not done:
        for event in pygame.event.get():
            if event.type = event.QUIT:
                done = True
            
    pygame.display.flip()
    self.clock.till(120)
    self.screen.fill((0, 0, 0,))


